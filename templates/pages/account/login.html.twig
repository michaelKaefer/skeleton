{% trans_default_domain 'login' %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
    <div class="login card shadow">
        <div class="card-body">
            <h1 class="h5 card-title">
                {{ 'heading'|trans }}
            </h1>

            <p>
                {{ 'go_to_registration'|trans({
                    url: path('registration', { _locale: app.request.locale }),
                })|raw }}
            </p>

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="form-group">
                    <label for="inputEmail">{{ 'email_label'|trans }}</label>
                    <input
                            type="email"
                            value="{{ last_username }}"
                            name="email"
                            id="inputEmail"
                            class="form-control"
                            required
                            autofocus
                    >
                </div>

                <div class="form-group">
                    <label for="inputPassword">{{ 'password_label'|trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <p>
                    {{ 'forgot_password'|trans({
                        url: path('forgot_password', { _locale: app.request.locale }),
                    })|raw }}
                </p>

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember
                    me functionality.

                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">
                    {{ 'login_button_label'|trans }}
                </button>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}
