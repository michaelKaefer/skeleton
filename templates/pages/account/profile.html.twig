{% trans_default_domain 'profile' %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'profile'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('profile') }}
{% endblock %}

{#Checkbox with link#}
{% form_theme form _self %}

{% block checkbox_radio_label -%}
    {#- Do not display the label if widget is not defined in order to prevent double label rendering -#}
    {%- if widget is defined -%}
        {% set is_parent_custom = parent_label_class is defined and ('checkbox-custom' in parent_label_class or 'radio-custom' in parent_label_class or 'switch-custom' in parent_label_class) %}
        {% set is_custom = label_attr.class is defined and ('checkbox-custom' in label_attr.class or 'radio-custom' in label_attr.class or 'switch-custom' in label_attr.class) %}
        {%- if is_parent_custom or is_custom -%}
            {%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' custom-control-label')|trim}) -%}
        {%- else %}
            {%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' form-check-label')|trim}) -%}
        {%- endif %}
        {%- if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif -%}
        {%- if required -%}
            {%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' required')|trim}) -%}
        {%- endif -%}
        {%- if parent_label_class is defined -%}
            {%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' ' ~ parent_label_class)|replace({'checkbox-inline': '', 'radio-inline': '', 'checkbox-custom': '', 'radio-custom': ''})|trim}) -%}
        {%- endif -%}
        {%- if label is not same as(false) and label is empty -%}
            {%- if label_format is not empty -%}
                {%- set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) -%}
            {%- else -%}
                {%- set label = name|humanize -%}
            {%- endif -%}
        {%- endif -%}

        {{ widget|raw }}
        <label{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}>
            {{- label is not same as(false) ? (translation_domain is same as(false) ? label|raw : label|trans(label_translation_parameters, translation_domain)|raw) -}}
            {{- form_errors(form) -}}
        </label>
    {%- endif -%}
{%- endblock checkbox_radio_label %}
{#Checkbox with link#}

{% block body %}
    <div class="w-100">
        <h1 class="h3 mb-4"><i class="fa fa-user"></i>&nbsp;&nbsp;{{ 'heading'|trans }}</h1>

        {% if user.confirmationToken %}
            <div class="alert alert-warning">
                <i class="fa fa-exclamation"></i>&nbsp;&nbsp;{{ 'please_confirm_your_account'|trans }}
            </div>
        {% else %}
            <div class="row">
                <div class="col-sm-6 col-lg-8">
                    {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.email, {
                                label: 'email',
                                attr: {
                                    autofocus: true,
                                    placeholder: 'email',
                                },
                            }) }}
                        </div>
                        <div class="col-md-12 mb-3">
                            {% include 'partials/_radio_button.html.twig' with {
                                id: 'is-organization',
                                options: {
                                    0: {
                                        label: 'person'|trans,
                                        active: user.type == 'PERSON',
                                        value: 'PERSON',
                                    },
                                    1: {
                                        label: 'company'|trans,
                                        active: user.type == 'ORGANIZATION',
                                        value: 'ORGANIZATION',
                                    },
                                },
                                help: 'profile_type_help'|trans({
                                    current_type: user.type == 'PERSON' ? 'person'|trans : 'company'|trans,
                                    other_type: user.type != 'PERSON' ? 'person'|trans : 'company'|trans,
                                })
                            } %}
                        </div>
                        <div class="person {{ user.type == 'PERSON' ? '' : 'd-none' }} col-md-12">
                            {% if form.person is defined %}
                                <div class="form-row">
                                    <div class="col-md-6">
                                        {{ form_row(form.person.firstName, {
                                            label: 'first_name'|trans,
                                        }) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_row(form.person.lastName, {
                                            label: 'last_name'|trans,
                                        }) }}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        <div class="organization {{ user.type == 'ORGANIZATION' ? '' : 'd-none' }} col-md-12">
                            {% if form.organization is defined %}
                                <div class="form-row">
                                    <div class="col-md-12">
                                        {{ form_row(form.organization.name, {
                                            label: 'name'|trans,
                                            attr: {
                                                class: 'custom-control custom-checkbox',
                                            },
                                            label_attr: {
                                                class: 'checkbox-custom'
                                            },
                                        }) }}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        <div class="col-md-12">
                            {{ form_row(form.receivesNewsletter, {
                                label: 'approve_newsletter'|trans,
                            }) }}
                        </div>
                        <div class="col-md-12">
                            <button class="btn btn-primary">{{ 'save'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
                <div class="col-sm-6 col-lg-4 d-flex flex-column align-items-center">
                    {# Image #}
                    {% if user.avatar %}
                        <img
                                style="max-width: 90%;"
                                src="{{ uploaded_file(user.avatarUrl) }}"
                                alt="{{ 'avatar'|trans }}"
                                class="card-img-top rounded mb-2"
                                id="js-avatar"
                        />
                    {% endif %}

                    {# Dropzone #}
                    <form
                            action="{{ path('avatar_upload', { user: user.id }) }}"
                            method="POST"
                            enctype="multipart/form-data"
                            class="dropzone avatar mb-4"
                            data-description="{{ 'upload_avatar'|trans }}"
                            data-error="{{ 'error_on_file_upload'|trans }}"
                            data-success="{{ 'success_on_file_upload'|trans }}"
                    >
                    </form>

                    {# Delete account #}
                    <div class="card">
                        <div class="card-body">
                            <h2 class="h5 card-title">{{ 'account_deletion_heading'|trans }}</h2>
                            <p class="card-text">{{ 'account_deletion_info'|trans }}</p>
                            {% include 'partials/_delete_button.html.twig' with {
                                route: path('user_delete', {'id': user.id}),
                                csrf_token: csrf_token('delete' ~ user.id),
                                button_label: 'delete_account_button_label'|trans,
                                question: 'are_you_sure_to_delete_your_account_question'|trans,
                            } %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('profile') }}
{% endblock %}
